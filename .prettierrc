{
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "importOrder": ["^@\\w+/(.*)$", "^@/\\w+/?(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "rules": {
    "prettier/prettier": [true, { "singleQuote": true, "tabWidth": 2 }]
  }
}
